<style>
  /* Make the sidebar fixed */
  #sidebar {
    position: fixed;
    width: 100px;
    height: 100vh;
  }

  /* Hide the text in the sidebar */
  #sidebar span {
    display: none;
  }

  /* Expand the sidebar on hover and show the text */
  #sidebar:hover {
    width: 100px;
  }

  #sidebar:hover span {
    display: inline;
  }

  /* Adjust the margin of the main content */
  .col {
    margin-left: 240px;
  }
